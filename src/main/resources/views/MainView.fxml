<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>

<BorderPane style="-fx-pref-width: 960; -fx-pref-height: 580" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <VBox>
        <padding>
            <Insets top="10" />
        </padding>
        <HBox>
            <ButtonBar>
                <buttons>
                    <Button fx:id="btnShowCreateConfig" onAction="#showCreateConfigDialog" styleClass="btn-show-create-config" text="New Config" />
                    <Label alignment="CENTER" text="Or" />
                    <ComboBox fx:id="comboConfig" promptText="Select Config" />
                    <Button fx:id="btnDeleteConfig" onAction="#showDeleteConfigConfirm" text="← Delete" />
                    <ComboBox fx:id="comboChooseDatabase" promptText="Select Database" />
                </buttons>
            </ButtonBar>
        </HBox>
        <HBox>
            <VBox>
                <padding>
                    <Insets top="10" left="20" />
                </padding>
                <VBox>
                    <TextField promptText="key/pattern" />
                </VBox>
                <VBox>
                    <padding>
                        <Insets top="4"/>
                    </padding>
                    <ListView fx:id="listViewKeys" minHeight="480" minWidth="300" />
                </VBox>
            </VBox>
            <VBox>
                <padding>
                    <Insets top="10" left="8" />
                </padding>
                <VBox>
                    <TextField />
                </VBox>
                <VBox>
                    <padding>
                        <Insets top="4"/>
                    </padding>
                    <TextArea minWidth="610" minHeight="400"/>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>
</BorderPane>
